# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Default to Unix EOL characters
[*]
end_of_line = lf

# 2 spaces for Terraform and YAML files
[*.{tf,yml}]
indent_style = space
indent_size = 2
insert_final_newline = true

# Tabs for Makefiles
[Makefile]
indent_style = tab
insert_final_newline = true
